<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share config)/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share config)/include/warehouse.rviz"/>
    <arg name="config_file" value="$(find-pkg-share maps)/warehouse/warehouse.building.yaml"/>
    <arg name="use_reservation_node" value="true"/>
  </include>

  <!-- TinyRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share maps)/maps/warehouse/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share config)/config/warehouse/tinyrobot_config.yaml"/>
    </include>
  </group>

</launch>
